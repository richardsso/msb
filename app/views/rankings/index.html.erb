<div id="ranking-tables" class="container">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">User</th>
        <th scope="col">Points</th>
      </tr>
    </thead>
    <tbody>
      <% @rankings.each do |category| %>
        <% if category.name == "Football" %>
        <!-- HEADER -->
        <h2><%= category.name %></h2>
          <% Category.ranking_per_category_user(category.name, 10).each_with_index do |c, index|%>
          <!-- USERS -->
            <tr>
              <td><%= index +1 %></td>
              <td><%= c.user.name %></td>
              <td><%= c.points %></td>
            </tr>
          <% end %>
        <% end %>
      <% end %>
    </tbody>
    <tfoot>
      <!-- TODO: USER RANKING -->
    </tfoot>
  </table>
</div>



