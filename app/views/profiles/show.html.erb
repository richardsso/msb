

<% if policy(@user).show? %>

  <h2>Your profile</h2>

    <%= cl_image_tag @user.photo, height: 300, width: 400, crop: :fill, style:"object-fit:cover" %>

    <p>Name : <%= @user.name %></p>
    <p>Gender : <%= @user.gender %></p>
    <p>Email : <%= @user.email %></p>
    <p>Bio : <%= @user.bio %></p>
    <p>Address : <%= @user.address %></p>
    <p>City : <%= @user.city %></p>


    <%= link_to "Edit my profile", edit_user_registration_path(current_user), class: "btn btn-success" %>


  <% end %>


