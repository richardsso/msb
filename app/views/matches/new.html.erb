<div class="row justify-content-center">
  <div class="col-8">
    <div class="border center">
      <%= simple_form_for [@match] do |f| %>
        <%= f.input :date %>
        <%= f.input :location %>
        <%= f.input :description %>
        <%= f.input :time %>
        <%= f.input :level %>
        <%= f.input :number_of_players %>
        <%= f.input :team_a %>
        <%= f.input :team_b %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit "Create", class: "btn btn-success mb-2" %>
      <% end %>
    </div>
  </div>
</div>
